---
import type { Locale } from '../i18n/translations';
import { t } from '../i18n/translations';
import StepCard from './StepCard.svelte';
import { getSteps } from '../data/steps';
import { getPopups } from '../data/popups';

interface Props {
  lang?: Locale;
}

const { lang = 'cs' } = Astro.props;
const i18n = t(lang);
const steps = getSteps(lang);
const popups = getPopups(lang);
---

<section class="hero">
  <div class="hero-inner">
    <h1 class="hero-title">{i18n.heroTitle}</h1>
    <p class="hero-subtitle">{i18n.heroSubtitle}</p>

    <div class="steps-grid">
      {steps.map((step) => (
        <StepCard
          client:visible
          title={step.title}
          subtitle={step.subtitle}
          image={step.image}
          popupContent={popups[step.popupId]?.content || ''}
        />
      ))}
    </div>
    <p class="swipe-hint">{i18n.swipeHint} &nbsp;&#8594;</p>
    <p class="click-hint">{i18n.clickHint}</p>
  </div>
</section>

<style>
  .hero {
    background-image: url('/images/header_bg_new-2.png');
    background-position: bottom center;
    background-repeat: no-repeat;
    background-size: cover;
    padding: 2.5em 15px 10em;
  }

  .hero-inner {
    max-width: var(--container-max-width);
    margin: 0 auto;
  }

  .hero-title {
    text-align: center;
    color: #fff;
    font-size: 45px;
    font-weight: 600;
    margin-bottom: 0;
    line-height: 1.3;
  }

  .hero-subtitle {
    text-align: center;
    color: #fff;
    font-size: 25px;
    line-height: 2em;
    font-weight: 300;
    margin-bottom: 2em;
  }

  .steps-grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 1rem;
  }

  .swipe-hint {
    display: none;
  }

  .click-hint {
    text-align: center;
    color: rgba(255, 255, 255, 0.5);
    font-size: 13px;
    font-weight: 300;
    margin-top: 2em;
    letter-spacing: 0.03em;
  }

  @media (max-width: 1024px) {
    .steps-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 600px) {
    .steps-grid {
      display: flex;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
      gap: 0.75rem;
      margin: 0 -15px;
      padding: 0 15px;
      scrollbar-width: none;
    }

    .steps-grid::-webkit-scrollbar {
      display: none;
    }

    .hero-title {
      font-size: 1.3em;
    }

    .hero-subtitle {
      font-size: 18px;
      margin-bottom: 1.5em;
    }

    .hero {
      padding-bottom: 6em;
    }

    .swipe-hint {
      display: block;
      text-align: center;
      color: rgba(255, 255, 255, 0.5);
      font-size: 12px;
      font-weight: 300;
      margin-top: 0.8em;
      letter-spacing: 0.05em;
    }

    .click-hint {
      margin-top: 0.3em;
      font-size: 12px;
    }
  }
</style>
