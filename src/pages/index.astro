---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import HeroSection from '../components/HeroSection.astro';
import ServicesSection from '../components/ServicesSection.astro';
import ReferencesGrid from '../components/ReferencesGrid.astro';
import Footer from '../components/Footer.astro';
import OrderFormModal from '../components/OrderFormModal.svelte';
import CookieConsent from '../components/CookieConsent.svelte';

const seoDescription = 'Profesionální mytí oken, výloh a prosklených ploch v Praze a okolí. Pravidelné i jednorázové služby pro obchody, restaurace a kanceláře. 20 let zkušeností, ekologické prostředky, pojištění pracovníků. Alabastr Clean, s.r.o.';

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'LocalBusiness',
  name: 'Myči.CZ – Alabastr Clean, s.r.o.',
  description: 'Profesionální úklidová firma specializující se na mytí oken, výloh a rozlehlých prosklených ploch v Praze a okolí. Nabízíme pravidelné i jednorázové služby pro obchody, restaurace, kanceláře i bytové domy. Působíme na trhu servisních úklidů již 20 let.',
  url: 'https://myci.cz',
  logo: 'https://myci.cz/images/logo_myci_web.webp',
  image: 'https://myci.cz/images/Alabastr-Clean-Uklidovy-servis.webp',
  telephone: ['+420704405060', '+420608820647'],
  email: 'info@myci.cz',
  address: {
    '@type': 'PostalAddress',
    addressLocality: 'Praha',
    addressCountry: 'CZ',
  },
  areaServed: {
    '@type': 'GeoCircle',
    geoMidpoint: {
      '@type': 'GeoCoordinates',
      latitude: 50.0755,
      longitude: 14.4378,
    },
    geoRadius: '50000',
  },
  priceRange: '$$',
  openingHoursSpecification: {
    '@type': 'OpeningHoursSpecification',
    dayOfWeek: ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'],
    opens: '07:00',
    closes: '18:00',
  },
  sameAs: [
    'https://www.facebook.com/mycicz',
  ],
  hasOfferCatalog: {
    '@type': 'OfferCatalog',
    name: 'Mycí služby',
    itemListElement: [
      {
        '@type': 'Offer',
        itemOffered: {
          '@type': 'Service',
          name: 'Mytí výloh obchodů a restaurací',
          description: 'Pravidelné i jednorázové mytí výloh, skleněných dveří a prosklených fasád obchodů a restaurací.',
        },
      },
      {
        '@type': 'Offer',
        itemOffered: {
          '@type': 'Service',
          name: 'Mytí oken',
          description: 'Mytí oken všech velikostí, typů a tvarů včetně rámů a parapetů. Profesionální technika UNGER.',
        },
      },
      {
        '@type': 'Offer',
        itemOffered: {
          '@type': 'Service',
          name: 'Mytí prosklených ploch',
          description: 'Mytí rozlehlých prosklených ploch, zimních zahrad, skleněných příček a atypických konstrukcí.',
        },
      },
      {
        '@type': 'Offer',
        itemOffered: {
          '@type': 'Service',
          name: 'Čištění po stavbě',
          description: 'Odstraňování znečištění po malířských, řemeslnických a stavebních pracích, odstranění polepů a log.',
        },
      },
    ],
  },
};
---

<BaseLayout title="Myči.CZ – Profesionální mytí oken a výloh v Praze" description={seoDescription}>
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  <Header />
  <main>
    <HeroSection />
    <ServicesSection />

    <div class="separator">
      <h2>REFERENCE</h2>
    </div>

    <ReferencesGrid />
  </main>
  <Footer />

  <OrderFormModal client:idle />
  <CookieConsent client:idle />
</BaseLayout>
