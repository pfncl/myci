---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import HeroSection from '../../components/HeroSection.astro';
import ServicesSection from '../../components/ServicesSection.astro';
import ReferencesGrid from '../../components/ReferencesGrid.astro';
import Footer from '../../components/Footer.astro';
import OrderFormModal from '../../components/OrderFormModal.svelte';
import CookieConsent from '../../components/CookieConsent.svelte';
import { t } from '../../i18n/translations';

const lang = 'en' as const;
const i18n = t(lang);

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'LocalBusiness',
  name: 'Myči.CZ – Alabastr Clean, s.r.o.',
  description: 'Professional cleaning company specializing in window, storefront and large glass surface cleaning in Prague and surroundings. We offer regular and one-time services for shops, restaurants, offices and residential buildings. 20 years of experience in the market.',
  url: 'https://myci.cz/en/',
  logo: 'https://myci.cz/images/logo_myci_web.webp',
  image: 'https://myci.cz/images/Alabastr-Clean-Uklidovy-servis.webp',
  telephone: ['+420704405060', '+420608820647'],
  email: 'info@myci.cz',
  address: {
    '@type': 'PostalAddress',
    addressLocality: 'Prague',
    addressCountry: 'CZ',
  },
  areaServed: {
    '@type': 'GeoCircle',
    geoMidpoint: {
      '@type': 'GeoCoordinates',
      latitude: 50.0755,
      longitude: 14.4378,
    },
    geoRadius: '50000',
  },
  priceRange: '$$',
  openingHoursSpecification: {
    '@type': 'OpeningHoursSpecification',
    dayOfWeek: ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'],
    opens: '07:00',
    closes: '18:00',
  },
  sameAs: [
    'https://www.facebook.com/mycicz',
  ],
  hasOfferCatalog: {
    '@type': 'OfferCatalog',
    name: 'Cleaning Services',
    itemListElement: [
      {
        '@type': 'Offer',
        itemOffered: {
          '@type': 'Service',
          name: 'Storefront cleaning',
          description: 'Regular and one-time cleaning of storefronts, glass doors and glass facades of shops and restaurants.',
        },
      },
      {
        '@type': 'Offer',
        itemOffered: {
          '@type': 'Service',
          name: 'Window cleaning',
          description: 'Window cleaning of all sizes, types and shapes including frames and sills. Professional UNGER equipment.',
        },
      },
      {
        '@type': 'Offer',
        itemOffered: {
          '@type': 'Service',
          name: 'Glass surface cleaning',
          description: 'Cleaning of large glass surfaces, winter gardens, glass partitions and atypical constructions.',
        },
      },
      {
        '@type': 'Offer',
        itemOffered: {
          '@type': 'Service',
          name: 'Post-construction cleaning',
          description: 'Removal of contamination after painting, craft and construction work, removal of stickers and logos.',
        },
      },
    ],
  },
};
---

<BaseLayout title={i18n.seoTitle} description={i18n.seoDescription} lang={lang}>
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  <Header lang={lang} />
  <main>
    <HeroSection lang={lang} />
    <ServicesSection lang={lang} />

    <div class="separator">
      <h2>{i18n.references}</h2>
    </div>

    <ReferencesGrid />
  </main>
  <Footer />

  <OrderFormModal client:idle lang={lang} />
  <CookieConsent client:idle lang={lang} />
</BaseLayout>
